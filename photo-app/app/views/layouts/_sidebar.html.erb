<%# app/views/layouts/_sidebar.html.erb %>
<div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
  <div class="position-sticky pt-3">
    <ul class="nav flex-column">
      <li class="nav-item">
        <%= link_to root_path, class: "nav-link #{'active' if current_page?(root_path)}" do %>
          <i class="fas fa-home"></i>
          Dashboard
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to show_user_images_path, class: "nav-link" do %>
          <i class="fas fa-images"></i>
          My Photos
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "#", class: "nav-link" do %>
          <i class="fas fa-upload"></i>
          Upload Photo
        <% end %>
      </li>
    </ul>
    
    <hr>
    
    <ul class="nav flex-column mb-2">
      <li class="nav-item">
        <%= link_to "#", class: "nav-link" do %>
          <i class="fas fa-cog"></i>
          Settings
        <% end %>
      </li>
      <li class="nav-item">
        <%= button_to destroy_user_session_path, 
            method: :delete,
            class: "btn btn-link nav-link text-danger text-start p-0 border-0",
            style: "background: none;",
            data: { confirm: "Are you sure you want to sign out?" } do %>
          <i class="fas fa-sign-out-alt"></i>
          Sign Out
        <% end %>
      </li>
    </ul>
  </div>
</div>