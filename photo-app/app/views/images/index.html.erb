<%# app/views/images/index.html.erb %>
<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Images</h1>
    <%= link_to "New image", new_image_path, class: "btn btn-primary" %>
  </div>

  <% if @images.any? %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @images.each do |image| %>
        <div class="col">
          <div class="card h-100">
            <% if image.picture.present? %>
              <%= image_tag image.picture.url, class: "card-img-top", alt: image.name %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= image.name %></h5>
              <p class="card-text text-muted">Uploaded by: <%= image.user.email %></p>
              <div class="d-flex justify-content-between">
                <%= link_to "View", image, class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_image_path(image), class: "btn btn-sm btn-outline-secondary" %>
                <%= button_to "Delete", image, method: :delete, class: "btn btn-sm btn-outline-danger", data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      No images found. <%= link_to "Upload your first image", new_image_path, class: "alert-link" %>
    </div>
  <% end %>
</div>