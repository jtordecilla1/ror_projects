<script language="Javascript">

Stripe.setPublishableKey("<%= Rails.application.credentials.dig(:stripe, :publishable_key) %>");

</script>


<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-7 col-md-9">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
          <h2><%= t('.sign_up') %></h2>
        </div>
        <div class="card-body p-4">
          <%= bootstrap_devise_error_messages! %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form", class: "cc_form", data: {turbo: false}}) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
              <% end %>
            </div>
            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
            </div>
            <hr>
            <h5 class="mb-3">Payment Information</h5>
            <%= fields_for(:payment) do |p| %>
              <div class="row">
                <div class="col-md-8 mb-3">
                  <%= p.label :card_number, 'Card Number', class: "form-label" %>
                  <%= p.text_field :card_number, class: 'form-control', placeholder: '1234 5678 9012 3456', required: true, data: {stripe: 'number'} %>
                </div>
                <div class="col-md-4 mb-3">
                  <%= p.label :card_cvc, 'CVV', class: "form-label" %>
                  <%= p.text_field :card_cvc, class: 'form-control', placeholder: '123', required: true, data: {stripe: 'cvc'} %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <%= p.label :card_expires_month, 'Expiry Month', class: "form-label" %>
                  <%= p.select :card_expires_month, 
                    options_for_select(Payment.month_options), 
                    {include_blank: "Month"}, 
                    class: 'form-select', 
                    required: true, 
                    data: {stripe: 'exp_month'}
                  %>
                </div>
                <div class="col-md-6 mb-3">
                  <%= p.label :card_expires_year, 'Expiry Year', class: "form-label" %>
                  <%= p.select :card_expires_year, 
                    options_for_select(Payment.year_options), 
                    {include_blank: "Year"}, 
                    class: 'form-select', 
                    required: true, 
                    data: {stripe: 'exp_year'}
                  %>
                </div>
              </div>
            <% end %>
            <div class="d-grid mt-4">
              <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>
          <hr>
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</div>