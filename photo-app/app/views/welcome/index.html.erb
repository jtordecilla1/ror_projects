<%# app/views/welcome/index.html.erb %>
<% if user_signed_in? %>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <div class="card shadow">
          <div class="card-body">
            <i class="fas fa-user-circle fa-4x text-primary mb-3"></i>
            <h2 class="card-title">Welcome back!</h2>
            <p class="card-text lead"><%= current_user.email %></p>
            <div class="btn-group" role="group">
              <%= link_to 'My Photos', '#', class: 'btn btn-primary' %>
              <%= link_to 'Upload Photo', '#', class: 'btn btn-outline-primary' %>
              <%= link_to 'Settings', '#', class: 'btn btn-outline-secondary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <!-- Hero Section -->
  <div class="hero-section text-white text-center py-5">
    <div class="container">
      <h1 class="display-4 fw-bold mb-3">Welcome to PhotoApp!</h1>
      <p class="lead mb-4">
        You'll love managing your Photos with our application. Sign up today!
      </p>
      <%= link_to 'Get Started', new_user_registration_path, class: 'btn btn-light btn-lg' %>
    </div>
  </div>

  <!-- Pricing Plans -->
 <%= render 'pages/pricing' %>

  <!-- Features Section -->
  <div class="bg-light py-5">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-4 mb-4">
          <i class="fas fa-cloud-upload-alt fa-3x text-primary mb-3"></i>
          <h4>Easy Upload</h4>
          <p class="text-muted">Upload your photos with just a few clicks. Drag and drop supported.</p>
        </div>
        <div class="col-md-4 mb-4">
          <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
          <h4>Mobile Friendly</h4>
          <p class="text-muted">Access your photos anywhere, anytime from any device.</p>
        </div>
        <div class="col-md-4 mb-4">
          <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
          <h4>Secure Storage</h4>
          <p class="text-muted">Your photos are stored securely with enterprise-grade encryption.</p>
        </div>
      </div>
    </div>
  </div>
<% end %>