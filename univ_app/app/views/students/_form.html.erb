<%= render "shared/error", obj: @student %>
<div class="container">
  <div class="row">
    <div class="col s12 m10 offset-m1 l8 offset-l2">
      <%= form_with(model: @student, local: true, class: "col s12") do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :name, class: "validate", autofocus: true %>
            <%= f.label :name, "Full Name" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.email_field :email, class: "validate" %>
            <%= f.label :email %>
            <span class="helper-text" data-error="Please enter a valid email">We'll never share your email with anyone</span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.password_field :password, class: "validate" %>
            <%= f.label :password, "Password" %>
            <span class="helper-text" data-error="Please enter a valid password">Must be at least 6 characters</span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.password_field :password_confirmation, class: "validate" %>
            <%= f.label :password_confirmation, "Confirm Password" %>
          </div>
        </div>
        <div class="row">
          <div class="col s12 center-align">
            <%= f.button class: "btn waves-effect waves-light" do %>
              <%= @student.new_record? ? "Register" : "Update" %>
              <i class="material-icons right">send</i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>