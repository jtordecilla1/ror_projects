<h1 class="section-header">Login to continue</h1>
<%= render 'shared/errors', obj: @user %>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="ui vertical divider">Or</div>
    <div class="middle aligned row">
      <div class="column">
        <div class="ui form">
        <%= form_with(scope: :session, url: login_path, class: "ui form", local: true, data: { turbo: false }) do |form| %>
          <div class="field left aligned">
            <%= form.label :username %>
            <div class="ui left icon input">
              <%= form.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field left aligned">
            <%= form.label :password %>
            <div class="ui left icon input">
              <%= form.password_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= form.submit "Login", class: "ui orange submit button" %>
        <% end %>
         </div>
      </div>
      <div class="column">
        <button class="ui orange button" disabled>
          <i class="signup icon"></i>
          Register
        </button>
      </div>
    </div>
  </div>
</div>