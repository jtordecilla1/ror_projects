<div class="ui inverted segment">
    <div class="ui inverted secondary pointing menu">
        <%= link_to "Chatroom", root_path, class: "item#{' active' if current_page?(root_path)}" %>
        <a class="item">Messages</a>
        <%= link_to "Login", login_path, class: "item#{' active' if current_page?(login_path)}" %>
        <div class="right menu">
            <div class="ui dropdown item">
                Account <i class="dropdown icon"></i>
                <div class="menu">
                    <% if logged_in? %>
                        <%= button_to "Logout", logout_path, method: :delete, form_class: "logout-form", class: "ui button item text-black" %>
                    <% else %>
                        <%= link_to "Login", login_path, class: "item text-black" %>
                        <%# link_to "Sign up", signup_path, class: "item" %>
                    <% end %>
                </div>
            </div>
            <% if !logged_in? %>
                <div class="item">
                    <%= link_to "Log in", login_path, class: "ui primary button" %>
                </div>
            <% end %>
        </div>
    </div>
</div>