<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, method: :get, remote: true do %>
    <div class="input-group mb-3">
      <%= text_field_tag :stock, params[:stock], placeholder: "Enter stock ticker symbol", autofocus: true, class: "form-control", required: true %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
</div>

<%= render 'stocks/list', tracked_stocks: @tracked_stocks %>

