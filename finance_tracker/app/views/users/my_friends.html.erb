<h1 class="mb-5">Friends</h1>
<h3>Search Friends</h3>
  <%= form_tag search_friend_path, method: :get, remote: true do %>
    <div class="input-group mb-3">
      <%= text_field_tag :friend_name, params[:friend_name], placeholder: "Enter friend's name", autofocus: true, class: "form-control", required: true %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-success" %>
      </div>
    </div>

<% end %>

<div id="friend-results">
  <!-- Friend search results will appear here -->
</div>

<% if @friends.any? %>
  <%= render 'friends/list', friends: @friends %>
<% else %>
  <p>No friends found.</p>
<% end %>
