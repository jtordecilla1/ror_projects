<div class="container">
  <%= render 'shared/errors', obj: @article %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded", local: true, data: { turbo: false }) do |f| %>
        <div class="row mb-3">
          <%= f.label :title, class: "col-sm-2 form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :description, class: "col-sm-2 form-label text-light" %>
          <div class="col-sm-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        
        <div class="row mb-3">
            <%= f.label :category_ids, "Categories", class: "col-sm-2 form-label text-light" %>
            <div class="col-sm-10"> 
            <div class="form-text text-light">Select categories for this article</div>
            <div class="row g-3">
              <% @categories.each do |category| %>
              <div class="form-check form-check-inline col-auto">
                <%= check_box_tag "article[category_ids][]", category.id, @article.category_ids.include?(category.id), id: "category_#{category.id}", class: "form-check-input" %>
                <%= label_tag "category_#{category.id}", category.name, class: "form-check-label text-light" %>
              </div>
              <% end %>
            </div>
            </div>

        <div class="row justify-content-center mt-4">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-4 mb-2">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "btn btn-outline-info px-4 py-2 mt-2" %>
    </div>
  </div>
</div>
<div style="height: 100px;"></div>