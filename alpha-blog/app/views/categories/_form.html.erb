<div class="container">
  <%= render 'shared/errors', obj: @category %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-dark rounded", local: true, data: { turbo: false }) do |f| %>
        <div class="row mb-3">
          <%= f.label :name, "Category Name", class: "col-sm-2 form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter category name " %>
          </div>
        </div>
                
        <div class="row justify-content-center mt-4">
         <%= f.submit class: "btn btn-outline-light" %>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-4 mb-2">
      <%= link_to '[ Cancel and return to categories ]', categories_path, class: "btn btn-outline-info px-4 py-2 mt-2" %>
    </div>
  </div>
</div>
<div style="height: 100px;"></div>