<h1 class="text-center">Category: <%= @category.name %></h1>

<div class="d-flex justify-content-center mb-4">
    <% if logged_in? && current_user.admin? %>
        <div class="d-flex gap-2">
            <%= link_to 'Edit Category', edit_category_path(@category), class: "btn btn-outline-primary" %>
            <%= button_to 'Delete Category', category_path(@category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
        </div>
    <% end %>
</div>

<div class="mb-4">
    <%= render 'articles/article', collection: @articles %>
</div>