<div class="container mt-4">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-lg border-0">
          <div class="card-header bg-primary text-white text-center fw-bold fs-5">
            <%= user.username %>
          </div>
          <%= gravatar_for user, styles: "card-img-top rounded-circle mx-auto d-block mt-3", size: 100 %>
          <div class="card-body text-center">
            <p class="card-text mb-1 text-muted">
              <%= user.email %>
            </p>
            <p class="mb-3">
              <span class="badge bg-info text-dark">
                <%= pluralize(user.articles.count, "article") %>
              </span>
            </p>
            <div class="d-flex justify-content-center gap-2">
              <%= link_to "View profile", user_path(user), class:"btn btn-outline-primary btn-sm px-3" %>
              <%= link_to "Edit profile", edit_user_path(user), class:"btn btn-outline-secondary btn-sm px-3" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>