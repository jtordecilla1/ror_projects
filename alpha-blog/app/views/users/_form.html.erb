<div class="container">
  <%= render 'shared/errors', obj: @user %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-dark rounded", local: true, data: { turbo: false }) do |f| %>
        <div class="row mb-3">
          <%= f.label :username, class: "col-sm-2 form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :email, class: "col-sm-2 form-label text-light" %>
          <div class="col-sm-10"> 
            <%= f.email_field :email, class:"form-control shadow rounded", placeholder: "Enter an email" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, class: "col-sm-2 form-label text-light" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>
        
        <div class="row justify-content-center mt-4">
          <%= f.submit( @user.new_record? ? "Sign up" : "Update profile", class: "btn btn-outline-light btn-lg") %>
        </div> 
      <% end %>
    </div>
    <div class="text-center mt-4 mb-2">
      <%= link_to '[ Cancel and return to users listing ]', users_path, class: "btn btn-outline-info px-4 py-2 mt-2" %>
    </div>
  </div>
</div>
<div style="height: 100px;"></div>